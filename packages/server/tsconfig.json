{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "jsx": "react",
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"]
} 